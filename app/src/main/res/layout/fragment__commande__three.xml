<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".commande.Fragment_Commande_Three">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/My_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="20dp"
                android:paddingLeft="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:src="@drawable/sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facture"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="20dp"
                android:paddingLeft="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Client :"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/title011"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title01"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Walid Besrour"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Telephone :"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                 />
                <TextView
                    android:id="@+id/title022"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title02"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="22 222 222"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Email :"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/title033"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title03"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="elBazar@gmail.com"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Payment Par :"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/title044"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title04"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="cheque"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/title05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Livré au :"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/title055"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingRight="15dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Francisco Román Alarcón 1060 W Addison St #13 Chicago, IL 60613 (123) 456-7890"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CCCACA"
                android:layout_margin="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cadre_transparant"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/Livretitle00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Livré le :"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Livretitle01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Livretitle00"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="24/12/2020"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/Montanttitle01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Livretitle00"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Montant :"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Montanttitle011"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Livretitle01"
                    android:layout_toRightOf="@+id/Montanttitle01"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="300.000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Taxtitle02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Montanttitle01"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Tax :"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Taxtitle022"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Taxtitle02"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:layout_below="@+id/Montanttitle011"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="10.000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/Totaltitle03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Taxtitle02"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="Total"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/Totaltitle033"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Totaltitle03"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:layout_below="@+id/Taxtitle022"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="310.000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"/>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="84dp"
                    android:layout_height="48dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="BACK"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="20dp"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/contunier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/back"
                    android:background="@drawable/btn_blue"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Confirmation"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:backgroundTint="@color/colorBlue" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</layout>
