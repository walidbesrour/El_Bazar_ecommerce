<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/My_background"
        tools:context=".Produit_Activity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/ab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white">

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>
            <ImageView
                android:id="@+id/produit_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ab"
                android:scaleType="fitXY"
                android:src="@drawable/produit_img"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/produit_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/acme"
                        android:textColor="@color/black"
                        android:text="walid besrour"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/nom_marque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/nom_p"
                        android:layout_marginLeft="8dp"
                        android:text="nom_marque"
                        android:textColor="#8A98BA"
                        android:textSize="16dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/acme"
                        android:textColor="@color/black"
                        android:text="120.000"
                        android:textSize="20dp" />
                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/card1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/black"
                    android:text="Size"
                    android:padding="10dp"
                    android:textSize="20dp"/>
                <RadioGroup
                    android:id="@+id/btn_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:text="S" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XL"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/size">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/black"
                    android:text="Color"
                    android:padding="10dp"
                    android:textSize="20dp"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</layout>
