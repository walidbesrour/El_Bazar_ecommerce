<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/My_background"
        tools:context=".Produit_Activity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/ab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white">

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>
            <ImageView
                android:id="@+id/produit_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ab"
                android:scaleType="fitXY"
                android:src="@drawable/produit_img"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/produit_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/acme"
                        android:textColor="@color/black"
                        android:text="Mexico Authentic  Home Jersey 2018"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/nom_marque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/nom_p"
                        android:layout_marginLeft="8dp"
                        android:text="Adidas"
                        android:textColor="#8A98BA"
                        android:textSize="16dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/acme"
                        android:textColor="@color/black"
                        android:text="120.000"
                        android:textSize="20dp" />
                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                />
            <LinearLayout
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/logo">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/black"
                    android:text="Size"
                    android:padding="10dp"
                    android:textSize="20dp"/>
                <RadioGroup
                    android:id="@+id/btn_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:text="S" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XL"
                        android:elevation="4dp"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_btn_selector"
                        android:textColor="@drawable/text_color"
                        android:padding="20dp"
                        android:layout_margin="10dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/size">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_margin="15dp"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Quantity"
                        android:fontFamily="@font/acme"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="18sp" />

                    <com.travijuu.numberpicker.library.NumberPicker
                        android:id="@+id/number_picker_custom"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        app:min="0"
                        app:max="10"
                        app:value="-5"
                        app:unit="1"
                        android:layout_alignParentRight="true" />



                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_margin="15dp"></View>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_below="@+id/nombre"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/compte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:background="@color/My_background"
                            android:paddingLeft="20dp"
                            android:text="Produit Detail : "
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:typeface="serif" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="Description Produit"/>
                            <Button
                                android:id="@+id/detailbbb"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:gravity="right"

                                android:textSize="12dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />

                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expandableView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gr1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Etat  : "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                            <TextView
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Disponible"
                                android:textColor="#00FF0A"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gr2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Nom du produit : "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                            <TextView
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="maillot de football"
                                android:textColor="#364350"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gr3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Prix  : "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                            <TextView
                                android:id="@+id/txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="120.000"
                                android:textColor="#364350"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gr4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Marque : "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                            <TextView
                                android:id="@+id/txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Adidas"
                                android:textColor="#364350"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gr5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Description : "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                            <TextView
                                android:id="@+id/txt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image"
                                android:text="Mexico Authentic  Home Jersey 2018"
                                android:textColor="#364350"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/Button_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/detail">
                <Button
                    android:id="@+id/ajouter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center"
                    android:text="acheter"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:backgroundTint="@color/colorBlue"/>

                <Button
                    android:id="@+id/pannier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center"
                    android:text="pannier"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/shopping"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:backgroundTint="@color/colorBlue"/>
                />

            </LinearLayout>

            <View
                android:id="@+id/ligne_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_below="@+id/Button_profile"
                android:layout_margin="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/OtherProducts"
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:layout_below="@+id/ligne_view"

                />

        </RelativeLayout>

    </ScrollView>

</layout>
